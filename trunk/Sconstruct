
import sys
pyver=sys.version[:3]

incs=['/usr/include/python'+pyver]
libs=['python'+pyver]

env = Environment(CPPPATH=incs)

sources=['io.cpp','maggs.cpp']
env.Object(sources)
objects=['io.o','maggs.o']

print(objects);

targets=['pb_colloid','pb_double_plane','p_spherical_capacitor']

for target in targets:
  source=[target+'.cpp']
  source.append(objects)
  env.Program(target,source,LIBS=libs)

